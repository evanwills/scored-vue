root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.html]
indent_size = 4
indent_style = tab
insert_final_newline = false

[*.sql]
indent_size = 4
indent_style = tab

[*.sh]
indent_size = 8
indent_style = tab
insert_final_newline = false

[*.md]
indent_size = 3
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
